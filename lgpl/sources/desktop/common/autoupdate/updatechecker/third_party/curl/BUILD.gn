    if (is_clang) {
      # error: passing an object that undergoes default argument promotion to
      # 'va_start' has undefined behavior
      cflags = [ "-Wno-varargs" ]
    }

    configs += [ ":libcurl_common_defines_win" ]
    public_configs = [ ":libcurl_common_defines_win" ]

    defines = [ "BUILDING_LIBCURL" ]
    if (!is_clang) {
      # We can presently only enable Win XP compatibility without clang.
      # See DNA-47431.
      defines += [
        # Win XP SP2+ compatibility.
